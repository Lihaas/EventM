<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OpenEvent"
    android:background="@drawable/back_of_semi_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:id="@+id/name">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:src="@drawable/event_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:id="@+id/name_of_app"
       />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/relative_layout">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardPreventCornerOverlap="false"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="353dp"
                android:src="@drawable/aaaaaaaa"
                android:scaleType="fitXY"
                android:id="@+id/image_selected"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model Dance"
                android:textSize="20sp"
                android:fontFamily="@font/castilar"
                android:textColor="#000000"
                android:layout_below="@id/relative_layout"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="70dp"
                android:id="@+id/event_name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/linear_layout"
                android:layout_marginTop="10dp">
                
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Prize - 2000Rs"
                    android:fontFamily="@font/sf_black"
                    android:textColor="#0033FF"
                    android:textSize="15sp"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/prize"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="One participant only"
                    android:fontFamily="@font/sf_black"
                    android:textColor="#121212"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/how_much_in_team"/>
                
                
                
                
                
                
                
                
                
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A ruthless politician will stop at nothing to conquer Washington, D.C., in this Emmy and Golden Globe-winning political drama."
                android:textSize="14sp"
                android:fontFamily="@font/sf_light"
                android:textColor="#000000"
                android:layout_below="@id/linear_layout"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
               android:maxLines="3"
                android:id="@+id/shortDetail"
                android:ellipsize="end"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Detail"
                android:textColor="#df1826"
                android:layout_below="@id/shortDetail"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/upp"
                android:layout_marginTop="20dp"
                android:id="@+id/moreDetail"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/shortDetail"
                android:layout_marginTop="100dp"
                android:visibility="invisible"/>


        </RelativeLayout>
    </LinearLayout>

    </ScrollView>

</FrameLayout>